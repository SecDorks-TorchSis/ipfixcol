Summary: Intermediate plugin for merging HTTP-related fields in flow records.
Name: @PACKAGE_NAME@
Version: @PACKAGE_VERSION@
Release: @RELEASE@
URL: http://www.rickhofstede.nl
Source: <URL>
License: <License>
Packager: @USERNAME@ <@USERMAIL@>
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}

BuildRequires: gcc make doxygen pkgconfig
Requires: ipfixcol >= 0.7.1

%description
Intermediate plugin for merging HTTP-related fields in flow records.

%prep
%setup

%post
ipfixconf add -c "%{_sysconfdir}/ipfixcol/internalcfg.xml" -p o -n statistics -t statistics -s "%{_datadir}/ipfixcol/plugins/ipfixcol-httpfieldmerge-intermediate.so" -f

%preun

%postun
ipfixconf remove -c "%{_sysconfdir}/ipfixcol/internalcfg.xml" -p o -n httpfieldmerge

%build
%configure --with-distro=@DISTRO@
make

%install
make DESTDIR=$RPM_BUILD_ROOT install

%files
#storage plugins
%{_datadir}/ipfixcol/plugins/ipfixcol-httpfieldmerge-intermediate.*
%{_mandir}/man1/ipfixcol-httpfieldmerge-intermediate.1.gz
